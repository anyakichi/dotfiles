[alias]
	ba = branch -a
	br = branch
	ci = commit
	cia = commit --amend
	ciaa = commit --amend --reset-author
	co = checkout
	com = checkout master
	di = diff
	dic = diff --cached
	dif = diff
	dis = diff --stat
	dit = difftool
	diw = diff --word-diff
	fp = fetch --prune
	glog = log --graph --oneline --decorate
	sh = show
	showw = show --word-diff
	shw = show --word-diff
	sp = stash pop
	ss = stash
	st = status
[core]
	pager = less -FRX
	quotepath = false
[diff]
	algorithm = histogram
	tool = vimdiff
[push]
	default = current
[rebase]
	autosquash = true
	autostash = true
[status]
	branch = true
	short = true
[tag]
	sort = version:refname
[include]
	path = ~/.gitconfig.local
