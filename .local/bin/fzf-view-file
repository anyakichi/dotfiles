#!/bin/bash

export LESS=-KMRc

if [[ -f "$1" ]]; then
    if command -v bat &>/dev/null; then
        bat --plain --color=always --paging=always "$1"
    else
        less "$1"
    fi
else [[ -d "$1" ]]
    if command -v exa &>/dev/null; then
        exa -T -L3 --color=always "$1" | less
    else
        /bin/ls --color "$1" | less
    fi
fi
