#include ".Xresources.d/colors/moria"

!
! Xft
!
Xft.antialias:		1
Xft.autohint:		0
Xft.hinting:		0
Xft.hintstyle:		hintnone
! These should be set by system Xresources.
!Xft.dpi:		96
!Xft.lcdfilter:		lcddefault
!Xft.rgba:		rgb


!
! URxvt
!
URxvt*termName:		xterm-256color
URxvt*scrollBar:	false
URxvt*fading:		15

! Fonts
URxvt*font:		[codeset=USASCII]xft:DejaVu Sans Mono:pixelsize=14, xft:IPAGothic:pixelsize=14, xft:DejaVu Sans Mono:pixelsize=14, xft:Symbola:pixelsize=14
URxvt*imFont:		-*-r-*-14-*
URxvt*lineSpace:	2
URxvt*letterSpace:	-1

! Extensions
URxvt*perl-ext-common:	default,clipboard,matcher,selection-to-clipboard
URxvt*matcher.button:	1
URxvt*url-launcher:	url-launcher


!
! xscreensaver
!
xscreensaver.mode:		blank
xscreensaver.timeout:		0:10:00
xscreensaver.cycle:		0:00:00
xscreensaver.lock:		True
xscreensaver.lockTimeout:	0:00:30
xscreensaver.passwdTimeout:	0:01:00
xscreensaver.dpmsEnabled:	True
xscreensaver.dpmsStandby:	0:10:00
xscreensaver.dpmsSuspend:	0:15:00
xscreensaver.dpmsOff:		0:20:00

xscreensaver.Dialog.headingFont:	-*-dejavu sans-bold-r-*--12-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:		-*-dejavu sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:		-*-dejavu sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:		-*-dejavu sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:		-*-dejavu sans-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:		-*-dejavu sans-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:		-*-dejavu sans-bold-r-*-*-12-*-*-*-*-*-*-*
