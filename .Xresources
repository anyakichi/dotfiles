#include ".Xresources.d/colors/moria"

#define FONT_SIZE	14

!
! Xft
!
Xft.antialias:		1
Xft.autohint:		0
Xft.hinting:		0
Xft.hintstyle:		hintnone
! These should be set by system Xresources.
!Xft.dpi:		96
!Xft.lcdfilter:		lcddefault
!Xft.rgba:		rgb


!
! URxvt
!
URxvt*termName:		xterm-256color
URxvt*scrollBar:	false
URxvt*fading:		15

! Fonts
URxvt*font:		[codeset=USASCII]xft:DejaVu Sans Mono:pixelsize=FONT_SIZE,\
			xft:IPAGothic:pixelsize=FONT_SIZE,\
			xft:DejaVu Sans Mono:pixelsize=FONT_SIZE,\
			xft:Symbola:pixelsize=FONT_SIZE
URxvt*imFont:		-*-*-*-R-*-*-FONT_SIZE-*-*-*-*-*-*
URxvt*lineSpace:	2
URxvt*letterSpace:	-1

! Extensions
URxvt*perl-ext-common:	default,clipboard,matcher,selection-to-clipboard
URxvt*matcher.button:	1
URxvt*url-launcher:	url-launcher
