#
# dot.hgrc:
#	Mercurial configuration
#

[alias]
vd = vimdiff
show = log -pr

[diff]
git = True
showfunc = True

[extensions]
bookmarks =
color =
convert =
extdiff =
graphlog =
mq =
pager =
progress =
rebase =
record =
shelve =

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
pager = LESS='FMRX' less
quiet = True
attend = annotate, cat, diff, export, help, glog, log, qdiff, qseries, \
         show, status

%include ~/.hgrc.local
