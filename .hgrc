#
# dot.hgrc:
#	Mercurial configuration
#

[alias]
vd = vimdiff
show = log -pr

[color]
mode = terminfo
color.green = 40
color.color8 = 8
color.color9 = 9
color.color10 = 10
color.color11 = 11
color.color12 = 12
color.color13 = 13
color.color14 = 14
color.color15 = 15

diff.diffline = color13 bold
diff.hunk = color14
diff.file_a = none
diff.file_b = none

[diff]
git = True
showfunc = True

[extensions]
bookmarks =
color =
convert =
extdiff =
graphlog =
mq =
pager =
progress =
rebase =
record =
shelve =

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
pager = LESS='FMXr' less
quiet = True
attend = annotate, cat, diff, export, help, glog, log, qdiff, qseries, \
         show, status

%include ~/.hgrc.local
