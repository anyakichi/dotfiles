[alias]
vd = vimdiff

[extensions]
bookmarks =
extdiff =
graphlog =
hggit =
mq =
pager =
rebase =

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
pager = LESS='FX' less
quiet = True

