#
# dot.hgrc:
# 	Mercurial configuration
#

[alias]
vd = vimdiff

[extensions]
bookmarks =
convert =
color =
extdiff =
graphlog =
hggit =
mq =
pager =
rebase =
record =

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
pager = LESS='FMRX' less
quiet = True
attend = annotate, cat, diff, export, glog, log, qdiff, status

%include ~/.hgrc.local
