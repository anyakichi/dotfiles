set mouse = yes

set split-view-height = 85%

bind generic g move-first-line
bind generic G move-last-line
bind main G move-last-line

bind generic b scroll-page-up
bind generic <C-b> scroll-page-up
bind generic f scroll-page-down
bind generic <C-f> scroll-page-down

bind generic i view-close

bind main R !git rebase -i %(commit)
bind diff R !git rebase -i %(commit)

color cursor color234 color136
color title-focus default color4 bold
color title-blur default color24 bold

color date color12 default
color author color3 default

color graph-commit color10 default

color diff-header color3 default
color diff-stat default default
color diff-index color5 default
color diff-chunk color12 default
color diff-add color6 default
color diff-del color11 default
color "---" color12 default
color "commit " color12 default
