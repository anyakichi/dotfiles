#!/bin/bash

set -o errexit
set -o pipefail

x() {
    echo "==> $*"
    "$@"
}

# yay
if ! command -v yay &>/dev/null; then
    sudo -k
    x sudo pacman -Syu --needed --noconfirm base base-devel
    x git clone https://aur.archlinux.org/yay-bin.git /tmp/yay-bin
    x makepkg -D /tmp/yay-bin -si --noconfirm
    x rm -rf /tmp/yay-bin
fi

