[alias]
	ba = branch -a
	br = branch
	ci = commit
	cia = commit --amend
	ciaa = commit --amend --reset-author
	cif = commit --fixup HEAD
	co = checkout
	com = "!git checkout $(git symbolic-ref refs/remotes/origin/HEAD | sed 's,^refs/remotes/origin/,,')"
	czg = "!npx czg"
	di = diff
	dic = diff --cached
	dif = diff
	dis = diff --stat
	dit = difftool
	diw = diff --word-diff
	fp = fetch --prune
	glog = log --graph --oneline --decorate
	hash = !fzf-git hash
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
	pushf = push --force-with-lease --force-if-includes
	qadd = !guilt add
	qdelete = !guilt delete
	qfold = !guilt fold
	qheader = !guilt header
	qimport = !guilt import
	qnew = !guilt new
	qpop = !guilt pop
	qpush = !guilt push
	qrebase = !guilt rebase
	qrefresh = !guilt refresh
	qrm = !guilt rm
	qseries = !guilt series
	qstatus = !guilt status
	rb = rebase
	rbi = rebase -i
	rbim = rebase -i origin/master
	rbiu = rebase -i @{u}
	rbm = rebase master
	sh = show
	showw = show --word-diff
	shw = show --word-diff
	sp = stash pop
	ss = stash
	ssa = stash -a
	st = status
	t = rev-parse --show-cdup
	top = rev-parse --show-toplevel
[branch]
	sort = -committerdate
[column]
	ui = auto
[commit]
	verbose = true
[core]
	pager = less -FRX
	quotepath = false
	untrackedCache = true
[credential]
	helper = !pass-git-helper $@
[diff]
	algorithm = histogram
	tool = vimdiff
[index]
	version = 4
[init]
	defaultBranch = main
[pager]
	status = true
[pull]
	rebase = true
[push]
	autoSetupRemote = true
	default = current
[rebase]
	autosquash = true
	autostash = true
[rerere]
	enabled = true
[stash]
	showPatch = true
[status]
	branch = true
	short = true
[tag]
	sort = version:refname
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[ghq]
	root = ~/src
[include]
	path = ~/.config/git/config_local
