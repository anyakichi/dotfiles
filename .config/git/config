[alias]
	ba = branch -a
	br = branch
	ci = commit
	cia = commit --amend
	ciaa = commit --amend --reset-author
	cif = commit --fixup HEAD
	co = checkout
	com = checkout master
	di = diff
	dic = diff --cached
	dif = diff
	dis = diff --stat
	dit = difftool
	diw = diff --word-diff
	fp = fetch --prune
	glog = log --graph --oneline --decorate
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
	qadd = !guilt add
	qdelete = !guilt delete
	qfold = !guilt fold
	qheader = !guilt header
	qimport = !guilt import
	qnew = !guilt new
	qpop = !guilt pop
	qpush = !guilt push
	qrebase = !guilt rebase
	qrefresh = !guilt refresh
	qrm = !guilt rm
	qseries = !guilt series
	qstatus = !guilt status
	rb = rebase
	rbi = rebase -i
	rbim = rebase -i origin/master
	rbiu = rebase -i @{u}
	rbm = rebase master
	sh = show
	showw = show --word-diff
	shw = show --word-diff
	sp = stash pop
	ss = stash
	st = status
	t = rev-parse --show-cdup
	top = rev-parse --show-toplevel
[core]
	pager = less -FRX
	quotepath = false
[diff]
	algorithm = histogram
	tool = vimdiff
[pager]
	status = true
[push]
	default = current
[rebase]
	autosquash = true
	autostash = true
[status]
	branch = true
	short = true
[tag]
	sort = version:refname
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[ghq]
	root = ~/src
[include]
	path = ~/.config/git/config_local
